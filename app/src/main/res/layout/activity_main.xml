<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="start"
        android:src="@drawable/bread_slices"
        app:layout_anchor="@+id/relativeLayout"
        app:layout_anchorGravity="left|bottom" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:src="@drawable/milk_carton"
        app:layout_anchor="@+id/relativeLayout"
        app:layout_anchorGravity="right|bottom" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="start"
        android:src="@drawable/steak"
        app:layout_anchor="@+id/relativeLayout"
        app:layout_anchorGravity="left|center" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:src="@drawable/broccoli"
        app:layout_anchor="@+id/relativeLayout"
        app:layout_anchorGravity="right|center" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="start"
        android:src="@drawable/carrot"
        app:layout_anchor="@+id/relativeLayout"
        app:layout_anchorGravity="left|top" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:src="@drawable/cabbage"
        app:layout_anchor="@+id/relativeLayout"
        app:layout_anchorGravity="right|top" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/gothamrounded"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_collapseMode="parallax" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:layout_margin="10dp"
                android:elevation="7dp"
                android:src="@color/white"
                app:layout_collapseMode="parallax" />

            <ImageView
                android:id="@+id/settings"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_margin="15dp"
                app:layout_collapseMode="parallax"
                app:srcCompat="@drawable/ic_settings_black_24dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/logo"
                app:layout_collapseMode="pin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:fontFamily="@font/gothamrounded"
                android:gravity="center"
                android:text="@string/slogan"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_collapseMode="parallax" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:clipToPadding="false"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context=".SupermarketsActivity">

            <EditText
                android:id="@+id/user_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_button3"
                android:drawableStart="@drawable/ic_my_location_black_24dp"
                android:focusable="false"
                android:fontFamily="@font/gothamrounded"
                android:gravity="center"
                android:hint="Your Location"
                android:inputType="none"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/dark_gray"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/supermarkets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/ic_local_grocery_store_black_24dp"
                    android:fontFamily="@font/gothamrounded"
                    android:gravity="center"
                    android:text="@string/supermarkets"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/ic_receipt_black_24dp"
                    android:fontFamily="@font/gothamrounded"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/orders"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/ic_info_black_24dp"
                    android:fontFamily="@font/gothamrounded"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/about"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/ic_help_black_24dp"
                    android:fontFamily="@font/gothamrounded"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/help"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/ic_feedback_black_24dp"
                    android:fontFamily="@font/gothamrounded"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/feedback"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/share_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/ic_share_black_24dp"
                    android:fontFamily="@font/gothamrounded"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/share_app"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#CC000000"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:id="@+id/adRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/adImage"
                        android:layout_width="170dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_margin="5dp"
                        android:src="@drawable/logo" />

                    <TextView
                        android:id="@+id/adQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_toEndOf="@id/adImage"
                        android:fontFamily="@font/gothamrounded"
                        android:gravity="center"
                        android:lines="2"
                        android:text="@string/what_is_the_ad_about"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/adHeadline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/adQuestion"
                        android:layout_margin="5dp"
                        android:layout_toEndOf="@id/adImage"
                        android:fontFamily="@font/gothamrounded"
                        android:gravity="center"
                        android:lines="3"
                        android:text="@string/ad_headline"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/adOffer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/adHeadline"
                        android:layout_margin="5dp"
                        android:layout_toEndOf="@id/adImage"
                        android:fontFamily="@font/gothamrounded"
                        android:gravity="center"
                        android:lines="1"
                        android:text="@string/ad_offer"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>